{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DB_HOST",
        "DB_PORT", 
        "DB_NAME",
        "DB_USERNAME",
        "DB_PASSWORD",
        "JWT_SECRET",
        "JWT_REFRESH_SECRET",
        "NODE_ENV",
        "PORT",
        "CORS_ORIGIN"
      ]
    }
  }
}
